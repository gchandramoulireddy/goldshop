<h1>Listing invoices</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Grams</th>
    <th>Wastage</th>
    <th>Gram amt</th>
    <th>Discount</th>
    <th>Total</th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%=h invoice.name %></td>
    <td><%=h invoice.address %></td>
    <td><%=h invoice.grams %></td>
    <td><%=h invoice.wastage %></td>
    <td><%=h invoice.gram_amt %></td>
    <td><%=h invoice.discount %></td>
    <td><%=h invoice.total %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', invoice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New invoice', new_invoice_path %>